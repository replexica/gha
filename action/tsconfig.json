{
  "compilerOptions": {
    "strict": true,
    "pretty": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ESNext",
    "rootDir": "src",
    "outDir": "build",
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ]
}
